package deyt_sal_gosse;

import java.awt.*;
import javax.swing.*;

public class Page_1 extends JPanel {
    private JLabel lblNom, lblPrenom, lblAge, lblAdresse;
    private JTextField txtNom, txtPrenom, txtAge, txtAdresse;

    public Page_1() {
        // création des composants de la page
        lblNom = new JLabel("Nom:");
        txtNom = new JTextField(20);
        lblPrenom = new JLabel("Prénom:");
        txtPrenom = new JTextField(20);
        lblAge = new JLabel("Age:");
        txtAge = new JTextField(3);
        lblAdresse = new JLabel("Adresse:");
        txtAdresse = new JTextField(50);

        // création du panneau principal
        JPanel panel = new JPanel(new GridLayout(4, 2));
        panel.add(lblNom);
        panel.add(txtNom);
        panel.add(lblPrenom);
        panel.add(txtPrenom);
        panel.add(lblAge);
        panel.add(txtAge);
        panel.add(lblAdresse);
        panel.add(txtAdresse);

        // ajout du panneau principal au panneau "page_1"
        this.add(panel);
    }
}
